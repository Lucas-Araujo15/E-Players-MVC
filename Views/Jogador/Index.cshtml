@model Jogador
@{
    ViewData["Title"] = "Jogadores";
    Equipe equipe = new Equipe();
}

<section class="banner_cadastro2">
    <h1>Cadastro de Jogadores</h1>
</section>
<section class="formulario formulario2">
    <nav class="cadastro cadastro2">
        <form class="times2 times"  method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
            <div>
                <label>Id Jogador</label><br>
                <input name="IdJogador" class="altura" type="text">
            </div>
            <div>
                <label>Nome do jogador</label><br>
                <input name="NomeJ" class="altura" type="text">
            </div>
            <div>
                <label>Email</label><br>
                <input class="altura" name="Email" type="text">
            </div>
            <div>
                <label>Senha</label><br>
                <input class="altura" name="Senha" type="password">
            </div>
            <div>
                <label>Equipe</label><br>

                <select name="EquipeJ">
                    @foreach (Equipe item in ViewBag.Equipe)
                    {
                        <option value="@item.IdEquipe">@item.Nome</option>
                    }
                </select>
            </div>

            <button type="submit" class="button button2">Cadastrar</button>

        </form>
        <div class="lista_times">
            <h2>Lista de Jogadores</h2>
            <table class="equipes">
                <thead>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Foto</th>
                    <th>Excluir</th>
                </thead>
                <tbody>
                    @foreach (Jogador item in ViewBag.Jogador)
                    {
                        <tr >
                            <td>@item.IdEquipe</td>
                            <td>@item.Nome</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </nav>
</section>


